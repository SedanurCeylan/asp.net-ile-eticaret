@model SliderCreateModel
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between">
                <h5 class="card-title">Slider Ekle</h5>
                <a asp-action="Index" class="btn btn-sm btn-primary align-items-center">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    @* Form genel hatalar *@
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row mb-3">
                        <label asp-for="Resim" class="col-sm-2 col-form-label">Resim Ekle:</label>
                        <div class="col-sm-10">
                            <input asp-for="Resim" class="form-control" type="file" />
                            <span asp-validation-for="Resim" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label asp-for="Baslik" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Baslik" class="form-control" />
                            <span asp-validation-for="Baslik" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea rows="3" asp-for="Aciklama" class="form-control"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Sira" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Sira" class="form-control" />
                            <span asp-validation-for="Sira" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Aktif" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Aktif" class="form-check-input" />
                            <span asp-validation-for="Aktif" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}