@model Slider
@{
    Layout= "_AdminLayout";
}


<div class="row">
    <div class="col">
    <div class="card">
        <div class="card-body text-center">
            <img src="~/img/@Model.Resim" class="card-img-top" alt="@Model.Baslik">
            <p>
                @Model.Baslik isimli Sliderı silmek istiyor musunuz?
            </p>
            <form asp-controller="Slider" asp-action="DeleteConfirm" method="post">
                <input type="hidden" name="id" value="@Model.Id">
                <button type="submit" class="btn btn-danger">Sil</button>
                <a asp-controller="Slider" asp-action="Index" class="btn btn-secondary">İptal</a>
            </form>
        </div>
    </div>

    </div>
</div>