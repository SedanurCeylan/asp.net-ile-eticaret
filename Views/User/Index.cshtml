@using Microsoft.AspNetCore.Identity
@model IEnumerable<e_ticaret_proje.Models.AppUser>
@{
    Layout = "_AdminLayout";
}

  <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between">
                        <h5 class="card-title">Kullanıcılar</h5>
                        <a href="#" class="btn btn-sm btn-primary align-items-center">
                            <i class="fa-solid fa-plus"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped mb-0">
                                <thead class="table-secondary">
                                    <tr>
                                        <th style="width: 50px;">Id</th>
                                        <th>Ad Soyad</th>
                                        <th>Email</th>
                                        <th style="width: 50px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach(var user in Model){
                                    <tr>
                                        <td>@user.Id</td>
                                         <td>
                                            <a href="#">@user.AdSoyad</a>
                                        </td>
                                        <td>@user.UserName</td
                                        <td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id=@user.Id class="btn btn-primary btn-sm">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                            </a>
                                        </td>

                                    </tr>
                                }
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>