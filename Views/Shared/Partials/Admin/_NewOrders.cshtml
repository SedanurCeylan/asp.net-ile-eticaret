@model e_ticaret_proje.Models.AdminDashboardViewModel

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1">
                <h5 class="card-title">Yeni Siparişler</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped mb-0">
                        <thead class="table-secondary">
                            <tr>
                                <th>Sipariş Id</th>
                                <th>Kullanıcı Adı</th>
                                <th>Toplam</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th style="width: 40px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.LastOrders != null && Model.LastOrders.Any())
                            {
                                @foreach (var item in Model.LastOrders)
                                {
                                    <tr>
                                        <td>@item.OrderId</td>
                                        <td>@item.Username</td>
                                        <td>@item.ToplamFiyat.ToString("C")</td>
                                        <td>@item.SiparisTarihi.ToShortDateString()</td>
                                        <td>
                                            <span class="badge bg-primary">Onay Bekliyor</span>
                                        </td>
                                        <td>
                                            <a asp-controller="Order"
                                               asp-action="Details"
                                               asp-route-id="@item.OrderId"
                                               class="btn btn-primary btn-sm">
                                                <i class="fa-solid fa-right-long"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted">
                                        Henüz yeni sipariş bulunmuyor.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
