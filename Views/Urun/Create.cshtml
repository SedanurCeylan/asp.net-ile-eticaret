@{
    Layout= "_AdminLayout";
}
<div class="row">
            <div class="col-md-9">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between">
                        <h5 class="card-title">Ürün Ekle</h5>
                        <a asp-controller="Urun" asp-action="Index" class="btn btn-sm btn-primary align-items-center">
                            <i class="fa-solid fa-list"></i>
                        </a>
                    </div>
                    <div class="card-body">
                         <form method="post">
                            <div class="row mb-3">
                                <label for="UrunAdi" class="col-sm-2 col-form-label">Ürün Adı:</label>
                                <div class="col-sm-10">
                                    <input type="text" name="UrunAdi" id="UrunAdi" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="UrunAciklama" class="col-sm-2 col-form-label">Açıklama:</label>
                                <div class="col-sm-10">
                                    <textarea id="UrunAciklama" name="UrunAciklama" rows="3" class="form-control"></textarea>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <label for="UrunFiyat" class="col-sm-2 col-form-label">Ürün Fiyat:</label>
                                <div class="col-sm-10">
                                    <input type="text" name="UrunFiyat" id="UrunFiyat" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="UrunAktif" class="col-sm-2 col-form-label">Aktif:</label>
                                <div class="col-sm-10">
                                    <input type="checkbox" name="UrunAktif" id="UrunAktif" class="form-check-input">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="UrunAnasayfa" class="col-sm-2 col-form-label">Anasayfa:</label>
                                <div class="col-sm-10">
                                    <input type="checkbox" name="UrunAnasayfa" id="UrunAnasayfa" class="form-check-input">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="UrunKategori" class="col-sm-2 col-form-label">Kategori:</label>
                                <div class="col-sm-10">
                                    <select class="form-select">
                                        <option value="" selected>Seçiniz...</option>
                                        <option value="1">Telefon</option>
                                        <option value="2">Bilgisayar</option>
                                        <option value="3">Saat</option>
                                        <option value="4">Beyaz Eşya</option>
                                    </select>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow">
                    <div class="card-body">
                        <img src="~/img/1.jpeg" class="img-thumbnail" alt="">
                        <input type="file" class="form-control mt-3">
                    </div>
                </div>
            </div>
        </div>